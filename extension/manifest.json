{
  "manifest_version": 3,
  "name": "Bias Mirror (Failsafe)",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content.js"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "vendor/pdf.min.js",
        "vendor/pdf.worker.min.js",
        "pdf_bridge.js"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}